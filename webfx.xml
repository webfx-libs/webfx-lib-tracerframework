<?xml version="1.0" encoding="UTF-8"?>
<project name="webfx-lib-tracerframework">

    <parent name="webfx-parent"/>

    <update-options>
        <generate-export-snapshot/>
    </update-options>

    <required-libraries>
        <group>
            <groupId>dev.webfx</groupId>
            <version>0.1.0-SNAPSHOT</version>
            <webfx-library name="webfx-extras"/>
            <webfx-library name="webfx-lib-odometer"/>
        </group>
    </required-libraries>

    <exported-packages>
        <source-packages/>
        <resource-package>dev.webfx.lib.tracerframework</resource-package>
    </exported-packages>

    <dependencies>
        <used-by-source-modules/>
    </dependencies>

    <maven-pom-manual>
        <properties>
            <!-- Necessary for single-module libraries, otherwise the webfx export is done too late in deploy phase -->
            <plugin.webfx.param.export-phase>install</plugin.webfx.param.export-phase>
        </properties>
    </maven-pom-manual>

</project>